<p>Editing Book </p>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Body</h4>
   <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></div>
 <%= link_to "Edit", edit_book_path(@book.id) %>
 <%= link_to "Back", books_path %>
<% end %>