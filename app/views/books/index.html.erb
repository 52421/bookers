<body class='index-body'>
 <h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>

 <% @books.each do |book| %>
  <tr>
    <td class="posted-title"><%= book.title %></td>
    <td class="posted-body"><%= book.body %></td>
    <td class="link-show"><%= link_to 'Show', book_path(book.id), method: :get %></td>
    <td class="link-edit"><%= link_to 'Edit', edit_book_path(book) %></td>
    <td class="link-destroy"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %></td>
   </tr>
  <% end %>
 </tbody>
</table>


 <%= form_with model:@booknew do |f| %>
  <% if @booknew.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@booknew.errors.count, "error") %> prohibited this book from being saved:</h2>

     <ul>
       <% @booknew.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
   </div>
  <% end %>

 <div class="field">
   <%= f.label :title %></br>
   <%= f.text_field :title %>
 </div>
 <div class="field">
   <%= f.label :body %></br>
   <%= f.text_field :body %>
 </div>
 <div class="actions">
   <%= f.submit %>
 </div>
<% end %>

</body>